rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is superuser
    function isSuperuser() {
      return request.auth != null && 
        request.auth.token.email == 'josephkyeremeh53@gmail.com'; // Superuser email
    }
    
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Superuser can read all users
      allow read: if isSuperuser();
    }
    
    // Users can only access their own mind maps
    match /mindmaps/{mindmapId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      // Superuser can read all mind maps
      allow read: if isSuperuser();
    }
    
    // Admin collections - only superuser can access
    match /admin/{document=**} {
      allow read, write: if isSuperuser();
    }
  }
}