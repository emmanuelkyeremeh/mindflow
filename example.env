# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-firebase-app-id

# OpenRouter Configuration
# Get your API key from https://openrouter.ai/
VITE_OPENROUTER_API_KEY=your-openrouter-api-key

# Site Information (Optional - for OpenRouter rankings)
VITE_SITE_URL=http://localhost:5173
VITE_SITE_NAME=MindFlow

# Application Configuration
VITE_APP_NAME=MindFlow
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Business Rules Configuration
# Number of free mind maps per user
VITE_FREE_MAPS_LIMIT=5
# Premium plan maps limit (-1 for unlimited)
VITE_PREMIUM_MAPS_LIMIT=-1

# Pricing Configuration (for future implementation)
# Premium plan pricing in USD
VITE_PREMIUM_PRICE_USD=5
# Premium plan pricing in GHS (Ghana Cedi)
VITE_PREMIUM_PRICE_GHS=20
# Premium plan pricing in pesewas (for Paystack)
VITE_PREMIUM_PRICE_PESEWAS=2000
# Currency code for payments
VITE_CURRENCY_CODE=GHS

# Paystack Configuration (for future implementation)
# Get your public key from Paystack Dashboard > Settings > API Keys & Webhooks
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Superuser Configuration
# Email address that has unlimited access (admin privileges)
VITE_FIREBASE_SUPERUSER_EMAIL=your-superuser-email@example.com

# Contact Information
# Contact email for support and inquiries
VITE_CONTACT_EMAIL=your-contact-email@example.com
